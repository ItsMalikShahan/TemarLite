<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CreateProfileFragments.Security">
    <RelativeLayout
        android:id="@+id/rl_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_signup">

    <RelativeLayout
        android:id="@+id/rl_Password"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_password"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:inputType=""
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sterik2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="*"
            android:textColor="#D50909" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_password"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/graycorner"
            android:hint="Password"
            android:inputType="textPassword"
            android:lines="1"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_10sdp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_confirmPassword"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_Password"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_confirm"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sterik1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="*"
            android:textColor="#D50909" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_confirm"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/graycorner"
            android:hint="Password"
            android:inputType="textPassword"
            android:lines="1"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:textCursorDrawable="@null" />
    </RelativeLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/corner"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>

</RelativeLayout>