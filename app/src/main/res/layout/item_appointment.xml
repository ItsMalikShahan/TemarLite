<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_design"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/rl_cardviewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/rl_presAndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_preBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextitpro_regular"
                        android:text="Prescribed by"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tv_dateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/avenir_nextitpro_regular"
                        android:text="Date Time"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tv_self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_preBy"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/avenir_nextitpro_bold"
                        android:text=""
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tv_dateTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_dateTime"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/avenir_nextitpro_bold"
                        android:text=""
                        android:textSize="@dimen/_10ssp" />

                </RelativeLayout>

                <!--            <RelativeLayout-->
                <!--                android:id="@+id/rl_dash"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->

                <ImageView
                    android:id="@+id/iv_dash"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_below="@id/rl_presAndDate"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/horizental_dash_line" />

                <RelativeLayout
                    android:id="@+id/rl_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_dash">

                    <TextView
                        android:id="@+id/tv_docName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/avenir_nextitpro_bold"
                        android:text=""
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:id="@+id/iv_info"
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:src="@drawable/info" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_test1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_doctor"
                    android:layout_toStartOf="@+id/rl_btn">

                    <TextView
                        android:id="@+id/tv_test1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextitpro_regular"
                        android:text="Test"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        android:id="@+id/tv_test2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_test1"
                        android:fontFamily="@font/avenir_nextitpro_regular"
                        android:text="Test"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        android:id="@+id/tv_test3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_test2"
                        android:fontFamily="@font/avenir_nextitpro_regular"
                        android:text="Test"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_9ssp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_doctor"
                    android:layout_alignParentEnd="true">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/corner"
                        android:text="Confirm"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@id/btn_confirm"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/patient_appointment_cancel_btn"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/rl_tests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_test1"
                    android:layout_toStartOf="@id/rl_btn">

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/expandable_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:el_duration="300"
                        app:el_expanded="false"
                        app:el_parallax="0.2">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_reports"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                    </net.cachapa.expandablelayout.ExpandableLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_tests"
                    android:layout_margin="@dimen/_2sdp">

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@id/iv_location"
                        android:fontFamily="@font/avenir_nextitpro_bold"
                        android:text=""
                        android:textSize="@dimen/_8ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_location">


                    <TextView
                        android:id="@+id/tv_testType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:fontFamily="@font/avenir_nextitpro_bold"
                        android:text="Sample:"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/tv_sampleStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_toEndOf="@id/tv_testType"
                        android:fontFamily="@font/avenir_nextitpro_bold"
                        android:text=""
                        android:textSize="@dimen/_8ssp" />

                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/drop_down"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@id/rl_layout_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:src="@drawable/ic_arrow_down_orange" />
</RelativeLayout>